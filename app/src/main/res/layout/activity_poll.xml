<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pollBackground"
    tools:context="com.nith.appteam.hillffair17.Activities.PollActivity">

<android.support.v7.widget.Toolbar android:id="@+id/my_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    android:titleTextColor="#ffffff"
    app:title="Poll"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" />

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_margin="8dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
       android:id="@+id/poll_ques"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/pollText"
        android:text=""
        android:textSize="30sp"
        />

    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/pollText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/poll_options">
   <Button
       android:id="@+id/option1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/pollButton"
       android:textSize="20dp"
       android:textColor="@color/pollText"
       android:text=""/>

    <Button
        android:id="@+id/option2"

        android:textColor="@color/pollText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/pollButton"
        android:textSize="20dp"

        android:text=""/>
    <Button
        android:id="@+id/option3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="20dp"
        android:background="@color/pollButton"
        android:textColor="@color/pollText"
        android:layout_marginTop="8dp"

        android:text=""/>
    <Button
        android:id="@+id/option4"
        android:background="@color/pollButton"
        android:textColor="@color/pollText"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:text=""/>


    </LinearLayout>

</LinearLayout>
</LinearLayout>